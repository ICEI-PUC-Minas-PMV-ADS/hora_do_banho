@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

@using(Html.BeginForm("Login", "Login", FormMethod.Post))
{
    <div class="container" style="margin-right:unset;">
            <div class="row rowEntrar">
                <div class="col-lg-12">
                    <div class="imagemDeFundo">
                        <div class="quadroFundoEntrar">
                            <div class="row">
                                <div class="col-lg-9"></div>
                                <div class="col-lg-3  btnVoltar">
                                    <a href="hora_do_banho.html" class="textosEntrar">Voltar</a>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <img class="logoEntrarTransparente" src="@Url.Content("~/assets/Logo_transparente.png")">
                                </div>
                            </div>
                            <div class="row">
                            @{
                                if (Model != null && Model.Sucesso == false)
                                {
                                    <div class="col-lg-2"></div>
                                    <div class="col-lg-8 divCamposEntrar">   
                                    <span class="mensagemRetornoEntrar">
                                        @Html.DisplayFor(m => m.Mensagem)
                                    </span>
                                    </div>
                                    <div class="col-lg-2"></div>
                                }
                            }
                            </div>
                            <div class="row">
                                <div class="col-lg-2"></div>
                                <div class="col-lg-8 divCamposEntrar">
                                    <p class="textosEntrar">Email </p>
                                    @Html.TextBoxFor(m => m.UserName, new {@class = "camposEntrar", @maxlength = 50, required="required"})
                                </div>
                                <div class="col-lg-2"></div>
                            </div>
                            <div class="row">
                                <div class="col-lg-2"></div>
                                <div class="col-lg-8 divCamposEntrar">
                                    <p class="textosEntrar">Senha </p>
                                    @Html.PasswordFor(m => m.Password, new {@class = "camposEntrar", @maxlength = 50, required="required"})
                                </div>
                                <div class="col-lg-2"></div>
                            </div>
                            <div class="row">
                                <div class="col-lg-2"></div>
                                <div class="col-lg-4 divCamposEntrar">
                                    <p class="textosEntrar" style="font-size: 12px;">
                                        @Html.CheckBoxFor(m => m.ManterConectado)Manter Conectado
                                    </p>
                                </div> 
                                <div class="col-lg-4" style="text-align:right"> 
                                    <a href="#" style="font-size:12px" class="textosEntrar">Esqueci a Senha!</a>
                                </div>      
                            </div>
                            <div class="row">
                                <div class="col-lg-12" style="text-align:center">
                                    <button class="buttonEntrar" type="submit">Entrar</button>
                                </div>
                            </div>
                            <div class="row" style="padding-top:20px">
                                <div class="col-lg-12" style="text-align:center">
                                    <p class="textosEntrar" style="font-size: 12px">
                                        Ainda não tem conta!
                                        <a href="#" class="textosEntrar">Cadastre-se</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>            
            </div>
        </div>
}